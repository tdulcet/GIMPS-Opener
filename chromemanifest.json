{
  "manifest_version": 2,
  "name": "GIMPS Opener",
  "version": "1.1",
  "author": "Teal Dulcet",

  "description": "Open Great Internet Mersenne Prime Search (GIMPS) 2á´¾-1 exponent numbers.",
  "homepage_url": "https://github.com/tdulcet/GIMPS-Opener",

  "omnibox": {
    "keyword": "exp"
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true,
    "chrome_style": true
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
        "browser-polyfill.js",
        "content_script.js"
      ]
    }
  ],
  "icons": {
    "32": "icons/icon_32.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png"
  },

  "permissions": [
    "storage",
    "<all_urls>",
    "contextMenus",
    "notifications"
  ]
}